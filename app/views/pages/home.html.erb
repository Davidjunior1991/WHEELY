<div class="container">
  <h1 class="welcome-title">Welcome to Wheely</h1>
  <p class="welcome-subtitle">"Get Rolling with Wheely!"</p>

  <%= link_to "Add a car", new_car_path, class: "btn btn-book" %>

  <div class="cars-container">
    <% @cars.each do |car| %>
      <div class="car-trip">
        <%= cl_image_tag car.photo.key, class: "car-image" %>
        <div class="car-trip-infos">
          <h2 class="car-name"><%= car.name %></h2>
          <p class="car-description">Short description here!</p>
          <h2 class="car-trip-pricing">Â£ <%= car.price_per_day %></h2>
        </div>
      </div>
    <% end %>
  </div>
</div>
